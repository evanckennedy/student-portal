@model StudentPortal.Models.Department

<section class="delete-department grid place-center view">
    <h2>Delete Department</h2>

    <h3>Are you sure you want to delete this Department?</h3>
    <p>Note: You are going to delete all courses related to this department!</p>

    @using (Html.BeginForm()) {
        <button type="submit" class="btn btn-primary delete-button">Yes</button>
        <a href="/Department/Index" class="btn btn-primary">No</a>
    }
</section>