@model StudentPortal.Models.Department

<h2>Update Department</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.DepartmentID)
    <div class="form-field">
        @Html.LabelFor(m => m.DepartmentName)
        @Html.TextBoxFor(m => m.DepartmentName)
        @Html.ValidationMessageFor(m => m.DepartmentName, "", new { @class = "text-danger" })
    </div>
    <div class="form-field">
        @Html.LabelFor(m => m.DepartmentHead)
        @Html.TextBoxFor(m => m.DepartmentHead)
        @Html.ValidationMessageFor(m => m.DepartmentHead, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
}

<a href="@Url.Action("Index")">Back to List</a>
