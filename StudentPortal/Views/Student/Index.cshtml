@model IEnumerable<StudentPortal.Models.Student>

@{
    ViewBag.Title = "Students List";
}

<h2>Students List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Student Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.StudentName</td>
                <td>@student.StudentEmail</td>
                <td>@student.DepartmentID</td>
                <td>
                    <a href="@Url.Action("UpdateStudent", new { id = student.StudentID })">Edit</a>
                    <a href="@Url.Action("DeleteStudent", new { id = student.StudentID })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("RegisterStudent")">Register New Student</a>
