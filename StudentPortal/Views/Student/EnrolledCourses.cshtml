@model IEnumerable<StudentPortal.Models.Course>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #f8f9fe;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
        }

            .table th, .table td {
                padding: 12px;
                border: 1px solid #ddd;
                text-align: left;
            }

            .table th {
                background-color: #1d439a;
                color: white;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        a {
            color: #1d439a;
            text-decoration: none;
            font-weight: bold;
        }

        .profile-link {
            display: inline-block;
            margin: 20px 0;
            padding: 10px 20px;
            background-color: #1d439a;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

            .profile-link:hover {
                background-color: #14306b;
                color: white;
            }

        .icon {
            margin-right: 7px;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <section class="container view">
        <h2>My Courses</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Duration</th>
                    <th>Credits</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model) {
                    <tr>
                        <td>@course.CourseName</td>
                        <td>@course.Duration months</td>
                        <td>@course.Credits</td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("StudentProfile", new { id = ViewBag.StudentID })" class="profile-link">
            <i class="fas fa-user icon"></i>My Profile
        </a>
    </section>
</body>
</html>
