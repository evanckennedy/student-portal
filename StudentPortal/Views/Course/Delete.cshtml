@model StudentPortal.Models.CourseViewModel

<h2>Delete Course</h2>

<h3>Are you sure you want to remove the following course from the department?</h3>

<div>
    <p>Course ID: #@Model.CourseID</p>
    <p>Course Name: @Model.CourseName</p>
    <p>Duration: @Model.Duration</p>
    <p>Credits: @Model.Credits</p>
    <p>Department ID: @Model.DepartmentID</p>
</div>
@using (Html.BeginForm("DeleteConfirmed", "Course", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CourseID)
    <button type="submit" class="btn btn-primary">Remove</button>
}

<a href="/Course/Index">Back to Courses' List</a>
